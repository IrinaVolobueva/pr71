<Window x:Class="пр71.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:пр71"
        mc:Ignorable="d"
        Title="Жизнь бесметрных пони" Height="450" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="215*"/>
        </Grid.RowDefinitions>
        <RadioButton GroupName="PonyLife" Margin="90,13,90,3" Checked="RadioButton_Checked" Grid.Row="1">Страдаю трудоголизмом</RadioButton>
        <RadioButton GroupName="PonyLife" Content="Мечтаю ничего не делать" Margin="90,2,91,6" Checked="RadioButton_Checked" Grid.Row="2"/>
        <Button Content="Выход" HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" Width="120" Grid.Row="3" Click="Button_Click"/>
    </Grid>
</Window>
